@article{Butler,
abstract = {We show that the initiation of credit default swaps (CDS) is associated with a decline in corporate bond underwriting fees due to the hedging opportunities CDS provide to investors. Following CDS initiation, participation in bond offerings by investors facing risk-based regulatory requirements increases, and underwriting fees decline more for riskier issuers and illiquid bonds for which the ability to hedge with CDS is more valuable, but the quality of underwriting services remains unchanged. Our evidence suggests that CDS-driven innovations in risk sharing contribute to the transactional efficiency of the market by reducing the financial intermediation costs of placing bonds.},
