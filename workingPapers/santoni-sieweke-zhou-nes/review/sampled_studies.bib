@article{Li2019,
abstract = {We examine the organizational choice and innovative activity of technology conglomeratesfirms that explore different technology fields with heated inventive activity. We develop a measure of firm-to-economy technological proximity to capture the extent of a firm's technology conglomeration. We show that technology conglomerates are more likely to form alliances and that these alliances lead to higher patent output. In terms of underlying mechanisms, we show that after alliance formation, there are significant knowledge pooling and cross-fertilization between technology conglomerates and their alliance partners. Moreover, technology conglomerates produce more patents that are novel and/or with greater impact. Our findings suggest that both synergy and tolerance for failure are important motives for technology conglomerates to use alliances to accelerate corporate innovation.},
