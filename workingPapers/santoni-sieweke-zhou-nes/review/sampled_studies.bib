file = {:Users/simone/.mendeley/Management Science/2002/Lilien et al. - 2002 - Performance Assessment of the Lead User Idea-Generation Process for New Product Development.pdf:pdf},
issn = {00251909},
journal = {Management Science},
keywords = {Idea generation,Lead users,New product development},
month = {aug},
number = {8},
pages = {1042--1059},
title = {{Performance assessment of the lead user idea-generation process for new product development}},
url = {http://pubsonline.informs.org/doi/abs/10.1287/mnsc.48.8.1042.171},
volume = {48},
year = {2002}
}
