keywords = {Agency theory,Corporate governance,Corporate social responsibility,Shareholder value,Short-termism,Stakeholder management},
month = {mar},
number = {3},
pages = {261--285},
title = {{With greater power comes greater responsibility? takeover protection and corporate attention to stakeholders}},
